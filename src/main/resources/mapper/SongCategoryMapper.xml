<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liang.mapper.SongCategoryMapper">
    <insert id="insert">
        insert into song_category(category_name,description,create_time,update_time) values(#{categoryName},#{description},NOW(),NOW())
    </insert>
    <update id="update">
        update song_category
        set category_name = #{categoryName},
            description = #{description},
            update_time = NOW()
        where id = #{id}
    </update>
    <delete id="deleteById">
        delete from song_category where id = #{id}
    </delete>
    <select id="selectById" resultType="com.liang.domain.SongCategory">
        select * from song_category where id = #{id}
    </select>
    <select id="selectAll" resultType="com.liang.domain.SongCategory">
        select * from song_category order by create_time desc
    </select>
</mapper>